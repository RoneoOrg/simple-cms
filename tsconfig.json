{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "netlify-cms-lib-util": ["packages/netlify-cms-lib-util/src"],
      "netlify-cms-lib-widgets": ["packages/netlify-cms-lib-widgets/src"],
      "netlify-cms-ui-default": ["packages/netlify-cms-ui-default/src"],
      "netlify-cms-locales": ["packages/netlify-cms-locales/src"],
      "netlify-cms-backend-azure": ["packages/netlify-cms-backend-azure/src"],
      "netlify-cms-backend-github": ["packages/netlify-cms-backend-github/src"],
      "netlify-cms-backend-gitlab": ["packages/netlify-cms-backend-gitlab/src"],
      "netlify-cms-backend-git-gateway": ["packages/netlify-cms-backend-git-gateway/src"],
      "netlify-cms-backend-bitbucket": ["packages/netlify-cms-backend-bitbucket/src"],
      "netlify-cms-backend-test": ["packages/netlify-cms-backend-test/src"],
      "netlify-cms-backend-proxy": ["packages/netlify-cms-backend-proxy/src"],
      "netlify-cms-widget-string": ["packages/netlify-cms-widget-string/src"],
      "netlify-cms-widget-number": ["packages/netlify-cms-widget-number/src"],
      "netlify-cms-widget-text": ["packages/netlify-cms-widget-text/src"],
      "netlify-cms-widget-image": ["packages/netlify-cms-widget-image/src"],
      "netlify-cms-widget-file": ["packages/netlify-cms-widget-file/src"],
      "netlify-cms-widget-select": ["packages/netlify-cms-widget-select/src"],
      "netlify-cms-widget-markdown": ["packages/netlify-cms-widget-markdown/src"],
      "netlify-cms-widget-list": ["packages/netlify-cms-widget-list/src"],
      "netlify-cms-widget-object": ["packages/netlify-cms-widget-object/src"],
      "netlify-cms-widget-relation": ["packages/netlify-cms-widget-relation/src"],
      "netlify-cms-widget-boolean": ["packages/netlify-cms-widget-boolean/src"],
      "netlify-cms-widget-map": ["packages/netlify-cms-widget-map/src"],
      "netlify-cms-widget-datetime": ["packages/netlify-cms-widget-datetime/src"],
      "netlify-cms-widget-code": ["packages/netlify-cms-widget-code/src"],
      "netlify-cms-widget-colorstring": ["packages/netlify-cms-widget-colorstring/src"],
      "netlify-cms-editor-component-image": ["packages/netlify-cms-editor-component-image/src"]
    }
  },
  "include": ["**/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
